import datetime
import os

date = datetime.datetime.now()

print 'Content-type:text/html\n\n'
print '<html>\n<head>\n<title>Information delivered by CGI (Python)</title>\n</head>\n<body>\n'
print '<h1>Environment variables</h1>'
for param in os.environ.keys():
    print "<b>%20s</b>: %s</br>" % (param, os.environ[param])
print '<center><small>&copy; <a href="https://fedorahosted.org/security-spin/">Fedora Security Lab</a> 2013-2015 - Page generated on %s.</small></center>' % (date)
print '</body></html>'
